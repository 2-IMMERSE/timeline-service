<tl:document title="Strawman presentation based on John's media set of 27-Jun-2016" ....>
    <tl:par tl:end="all">
        <!-- Master video feed is edited, and is running all the time -->
        <tl:ref class="MasterVideo" 
                url="http://cdn.2immerse.eu/theatre/mainfeed.mp4"
                title="14min preshow + 105min part1 + 20min interval + 75min part2"
                tl:prio="high"
                >
        <!-- A/V Chat can be brought up at any point in time (not only during preshow/interval) -->
        <tl:par tl:sync=false">
            <tl:conditional tl:expr="enableChat">
                <tl:ref class="AVChat" ... />
            </tl:conditional>
        </tl:par>
        <!-- Synchronised script can be brought up at any point in time, its timeline is the full 214 minutes -->
        <tl:conditional tl:expr="enableScript">
            <tl:ref class="ScriptWidget" url="http://cdn.2immerse.eu/theatre/script.ttml">
        </tl:conditional>
        <!-- Subtitles can only be brought up during the actual play, their timeline is the 180 minutes of the play -->
        <tl:conditional tl:expr="enableSubtitles">
            <tl:seq>
                <tl:sleep tl:dur="00:14:00"/>
                <tl:ref class="SubtitleWidget" url="http://cdn.2immerse.eu/theatre/subtitles.ttml#t=,01:45:00"/>
                <tl:sleep tl:dur="00:20:00"/>
                <tl:ref class="SubtitleWidget" url="http://cdn.2immerse.eu/theatre/subtitles.ttml#t=01:45:00"/>
            </tl:seq>
        </tl:conditional>
        <!-- Trailer can be viewed (unsynchronised) only during the interval -->
        <tl:seq>
            <tl:sleep tl:dur="00:14:00"/> <!-- pre-show -->
            <tl:sleep tl:dur="01:45:00"/> <!-- part 1 -->
            <tl:par tl:sync="false" tl:end="master">
                <tl:sleep tl:dur="00:20:00" tl:prio="high"/> <!-- interval -->
                <tl:seq>
                    <tl:wait tl:event="startTrailer"/>
                    <tl:ref class="video" url="http://cdn.2immerse.eu/theatre/trailer.mp4"/>
                </tl:seq>
            </tl:par>
        </tl:seq>
        <!-- Need to think of a way to do the second video feed -->
    </tl:par>
</tl:document>
